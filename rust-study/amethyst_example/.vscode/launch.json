  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "custom_game_data",
      "cargo": {
        "args": [
          "run",
          "--example=custom_game_data",
          "--package=amethyst_example",
        ],
        "filter": {
          "name": "amethyst_example",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'amethyst_example'",
      "cargo": {
        "args": [
          "build",
          "--bin=amethyst_example",
          "--package=amethyst_example"
        ],
        "filter": {
          "name": "amethyst_example",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'amethyst_example'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=amethyst_example",
          "--package=amethyst_example"
        ],
        "filter": {
          "name": "amethyst_example",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
